   115 000000B9 0401                <1>     add   al,1                          ;  by
   116 000000BB A2[FE0B0000]        <1>     mov   [Col],al                      ;  1
   117                              <1> PutStr3:
   118 000000C0 46                  <1>     inc   esi                           ; Bump ESI to next character in our string
