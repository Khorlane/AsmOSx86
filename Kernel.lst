   101 00000082 A2[1C0C0000]        <1>     mov   [Col],al                      ;   back to
   102 00000087 A0[1B0C0000]        <1>     mov   al,[Row]                      ;   1 and
   103 0000008C FEC0                <1>     inc   al                            ;   bump row
